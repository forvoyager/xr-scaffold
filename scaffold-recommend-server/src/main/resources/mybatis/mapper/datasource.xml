<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- author: forvoyager@outlook.com -->
<!-- time: 2021-08-12 10:20:19 -->
<!-- description: 推荐数据源 数据库操作mapper -->
<mapper namespace="com.xr.recommend.mapper.DatasourceMapper">

  <sql id="Base_Column_List">
    `datasource_id`, `source_code`, `name`, `status`, `remark`, `create_time`, `update_time`
  </sql>

  <!-- 自定义查询条件 -->
  <sql id="Custom_Where_Sql">

  </sql>

  <!-- 基础查询条件，不允许修改，自定义条件在Custom_Where_Sql中添加 -->
  <sql id="Base_Where_Sql">
    <if test="idList != null and idList.size() > 0">
      <![CDATA[ AND t.`datasource_id` IN ]]>
      <foreach collection="idList" item="item" open="(" separator="," close=")">
        <![CDATA[ #{item} ]]>
      </foreach>
    </if>
    <if test="datasource_id != null">
      <![CDATA[ AND t.`datasource_id` = #{datasource_id} ]]>
    </if>
    <if test="source_code != null">
      <![CDATA[ AND t.`source_code` = #{source_code} ]]>
    </if>
    <if test="name != null">
      <![CDATA[ AND t.`name` = #{name} ]]>
    </if>
    <if test="status != null">
      <![CDATA[ AND t.`status` = #{status} ]]>
    </if>
    <if test="remark != null">
      <![CDATA[ AND t.`remark` = #{remark} ]]>
    </if>
    <if test="create_time != null">
      <![CDATA[ AND t.`create_time` = #{create_time} ]]>
    </if>
    <if test="update_time != null">
      <![CDATA[ AND t.`update_time` = #{update_time} ]]>
    </if>
  </sql>

  <sql id="Where_Sql">
    <where>
      <include refid="Base_Where_Sql"/>
      <include refid="Custom_Where_Sql"/>
    </where>
  </sql>

  <!-- 插入 -->
  <insert id="insert" parameterType="com.xr.recommend.common.model.DatasourceModel" keyProperty="datasource_id" useGeneratedKeys="true">
    <![CDATA[ INSERT INTO res_datasource ]]>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="datasource_id != null">
        <![CDATA[ `datasource_id`, ]]>
      </if>
      <if test="source_code != null">
        <![CDATA[ `source_code`, ]]>
      </if>
      <if test="name != null">
        <![CDATA[ `name`, ]]>
      </if>
      <if test="status != null">
        <![CDATA[ `status`, ]]>
      </if>
      <if test="remark != null">
        <![CDATA[ `remark`, ]]>
      </if>
      <if test="create_time != null">
        <![CDATA[ `create_time`, ]]>
      </if>
      <if test="update_time != null">
        <![CDATA[ `update_time`, ]]>
      </if>
    </trim>
    <![CDATA[ VALUES ]]>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="datasource_id != null">
        <![CDATA[ #{datasource_id}, ]]>
      </if>
      <if test="source_code != null">
        <![CDATA[ #{source_code}, ]]>
      </if>
      <if test="name != null">
        <![CDATA[ #{name}, ]]>
      </if>
      <if test="status != null">
        <![CDATA[ #{status}, ]]>
      </if>
      <if test="remark != null">
        <![CDATA[ #{remark}, ]]>
      </if>
      <if test="create_time != null">
        <![CDATA[ #{create_time}, ]]>
      </if>
      <if test="update_time != null">
        <![CDATA[ #{update_time}, ]]>
      </if>
    </trim>
  </insert>

  <!-- 批量插入 -->
  <insert id="insertBatch" parameterType="com.xr.recommend.common.model.DatasourceModel">
    <![CDATA[ INSERT INTO res_datasource (`datasource_id`, `source_code`, `name`, `status`, `remark`, `create_time`, `update_time`) VALUES ]]>
    <foreach collection="list" separator="," item="item">
      (#{item.datasource_id}, #{item.source_code}, #{item.name}, #{item.status}, #{item.remark}, #{item.create_time}, #{item.update_time})
    </foreach>
  </insert>

  <!-- 更新（主键/version/create_time不会被更新，version自增1） -->
  <update id="update" parameterType="map">
    <![CDATA[ UPDATE res_datasource t SET t.`version` = t.`version` + 1, ]]>
    <trim suffixOverrides=",">
      <if test="source_code != null">
        <![CDATA[ t.`source_code` = #{source_code}, ]]>
      </if>
      <if test="name != null">
        <![CDATA[ t.`name` = #{name}, ]]>
      </if>
      <if test="status != null">
        <![CDATA[ t.`status` = #{status}, ]]>
      </if>
      <if test="remark != null">
        <![CDATA[ t.`remark` = #{remark}, ]]>
      </if>
      <if test="update_time != null">
        <![CDATA[ t.`update_time` = #{update_time}, ]]>
      </if>
    </trim>
    <where>
      <if test="datasource_id != null">
        <![CDATA[ AND t.`datasource_id` = #{datasource_id} ]]>
      </if>
    </where>
  </update>

  <!-- 删除 -->
  <delete id="delete" parameterType="map">
    <![CDATA[ DELETE t FROM res_datasource t ]]>
    <include refid="Where_Sql"/>
  </delete>

  <!-- 查询行数 -->
  <select id="selectCount" parameterType="map" resultType="long">
    <![CDATA[ SELECT COUNT(*) FROM res_datasource t ]]>
    <include refid="Where_Sql"/>
  </select>

  <!-- 查询记录 -->
  <select id="selectList" parameterType="map" resultType="com.xr.recommend.common.model.DatasourceModel">
    <![CDATA[ SELECT ]]>
    <include refid="Base_Column_List"/>
    <![CDATA[ FROM res_datasource t ]]>
    <include refid="Where_Sql"/>
    <include refid="global.globalSort"/>
  </select>

</mapper>