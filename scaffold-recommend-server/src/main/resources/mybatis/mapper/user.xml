<mapper namespace="com.xr.recommend.mapper.UserMapper">

  <sql id="Base_Column_List">
    `id`, `datasource_id`, `user_id`, `age`, `gender`, `tags`, `extend`, `create_time`, `update_time`
  </sql>

  <!-- 自定义查询条件 -->
  <sql id="Custom_Where_Sql">

  </sql>

  <!-- 基础查询条件，不允许修改，自定义条件在Custom_Where_Sql中添加 -->
  <sql id="Base_Where_Sql">
    <if test="idList != null and idList.size() > 0">
      <![CDATA[ AND t.`id` IN ]]>
      <foreach collection="idList" item="item" open="(" separator="," close=")">
        <![CDATA[ #{item} ]]>
      </foreach>
    </if>
    <if test="id != null">
      <![CDATA[ AND t.`id` = #{id} ]]>
    </if>
    <if test="datasource_id != null">
      <![CDATA[ AND t.`datasource_id` = #{datasource_id} ]]>
    </if>
    <if test="user_id != null">
      <![CDATA[ AND t.`user_id` = #{user_id} ]]>
    </if>
    <if test="age != null">
      <![CDATA[ AND t.`age` = #{age} ]]>
    </if>
    <if test="gender != null">
      <![CDATA[ AND t.`gender` = #{gender} ]]>
    </if>
    <if test="tags != null">
      <![CDATA[ AND t.`tags` = #{tags} ]]>
    </if>
    <if test="extend != null">
      <![CDATA[ AND t.`extend` = #{extend} ]]>
    </if>
    <if test="create_time != null">
      <![CDATA[ AND t.`create_time` = #{create_time} ]]>
    </if>
    <if test="update_time != null">
      <![CDATA[ AND t.`update_time` = #{update_time} ]]>
    </if>
  </sql>

  <sql id="Where_Sql">
    <where>
      <include refid="Base_Where_Sql"/>
      <include refid="Custom_Where_Sql"/>
    </where>
  </sql>

  <!-- 插入 -->
  <insert id="insert" parameterType="com.xr.recommend.common.model.UserModel" keyProperty="id" useGeneratedKeys="true">
    <![CDATA[ INSERT INTO res_user ]]>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        <![CDATA[ `id`, ]]>
      </if>
      <if test="datasource_id != null">
        <![CDATA[ `datasource_id`, ]]>
      </if>
      <if test="user_id != null">
        <![CDATA[ `user_id`, ]]>
      </if>
      <if test="age != null">
        <![CDATA[ `age`, ]]>
      </if>
      <if test="gender != null">
        <![CDATA[ `gender`, ]]>
      </if>
      <if test="tags != null">
        <![CDATA[ `tags`, ]]>
      </if>
      <if test="extend != null">
        <![CDATA[ `extend`, ]]>
      </if>
      <if test="create_time != null">
        <![CDATA[ `create_time`, ]]>
      </if>
      <if test="update_time != null">
        <![CDATA[ `update_time`, ]]>
      </if>
    </trim>
    <![CDATA[ VALUES ]]>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        <![CDATA[ #{id}, ]]>
      </if>
      <if test="datasource_id != null">
        <![CDATA[ #{datasource_id}, ]]>
      </if>
      <if test="user_id != null">
        <![CDATA[ #{user_id}, ]]>
      </if>
      <if test="age != null">
        <![CDATA[ #{age}, ]]>
      </if>
      <if test="gender != null">
        <![CDATA[ #{gender}, ]]>
      </if>
      <if test="tags != null">
        <![CDATA[ #{tags}, ]]>
      </if>
      <if test="extend != null">
        <![CDATA[ #{extend}, ]]>
      </if>
      <if test="create_time != null">
        <![CDATA[ #{create_time}, ]]>
      </if>
      <if test="update_time != null">
        <![CDATA[ #{update_time}, ]]>
      </if>
    </trim>
  </insert>

  <!-- 批量插入 -->
  <insert id="insertBatch" parameterType="com.xr.recommend.common.model.UserModel">
    <![CDATA[ INSERT INTO res_user (`id`, `datasource_id`, `user_id`, `age`, `gender`, `tags`, `extend`, `create_time`, `update_time`) VALUES ]]>
    <foreach collection="list" separator="," item="item">
      (#{item.id}, #{item.datasource_id}, #{item.user_id}, #{item.age}, #{item.gender}, #{item.tags}, #{item.extend}, #{item.create_time}, #{item.update_time})
    </foreach>
  </insert>

  <!-- 更新（主键/version/create_time不会被更新，version自增1） -->
  <update id="update" parameterType="map">
    <![CDATA[ UPDATE res_user t SET t.`version` = t.`version` + 1, ]]>
    <trim suffixOverrides=",">
      <if test="datasource_id != null">
        <![CDATA[ t.`datasource_id` = #{datasource_id}, ]]>
      </if>
      <if test="user_id != null">
        <![CDATA[ t.`user_id` = #{user_id}, ]]>
      </if>
      <if test="age != null">
        <![CDATA[ t.`age` = #{age}, ]]>
      </if>
      <if test="gender != null">
        <![CDATA[ t.`gender` = #{gender}, ]]>
      </if>
      <if test="tags != null">
        <![CDATA[ t.`tags` = #{tags}, ]]>
      </if>
      <if test="extend != null">
        <![CDATA[ t.`extend` = #{extend}, ]]>
      </if>
      <if test="update_time != null">
        <![CDATA[ t.`update_time` = #{update_time}, ]]>
      </if>
    </trim>
    <where>
      <if test="id != null">
        <![CDATA[ AND t.`id` = #{id} ]]>
      </if>
    </where>
  </update>

  <!-- 删除 -->
  <delete id="delete" parameterType="map">
    <![CDATA[ DELETE t FROM res_user t ]]>
    <include refid="Where_Sql"/>
  </delete>

  <!-- 查询行数 -->
  <select id="selectCount" parameterType="map" resultType="long">
    <![CDATA[ SELECT COUNT(*) FROM res_user t ]]>
    <include refid="Where_Sql"/>
  </select>

  <!-- 查询记录 -->
  <select id="selectList" parameterType="map" resultType="com.xr.recommend.common.model.UserModel">
    <![CDATA[ SELECT ]]>
    <include refid="Base_Column_List"/>
    <![CDATA[ FROM res_user t ]]>
    <include refid="Where_Sql"/>
    <include refid="global.globalSort"/>
  </select>

